<h5>Login</h5>

<form {{action 'authenticate' identification password on='submit'}}>
  <div class='form-group'>
    <label>
      Email
    </label>
    {{input
      type='text'
      value=identification
      data-test-login-input-identification=true
    }}
  </div>

  <div class='form-group'>
    <label>
      Password
    </label>
    {{input
      type='password'
      value=password
      data-test-login-input-password=true
    }}
  </div>
  <div class='form-group'>
    <button
      type='submit'
      data-test-login-input-submit
    >
      Sign in
    </button>
  </div>
</form>
