<h5>Login</h5>

<form {{action 'authenticate' identification password on='submit'}}>
  <div class='form-group'>
    <label>
      Email
    </label>
    {{input
      type='text'
      value=identification
    }}
  </div>

  <div class='form-group'>
    <label>
      Password
    </label>
    {{input
      type='password'
      value=password
    }}
  </div>
  <div class='form-group'>
    <button type='submit'>
      Sign in
    </button>
  </div>
</form>
